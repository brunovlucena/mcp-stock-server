{
  "name": "mcp-stock-server",
  "version": "1.0.0",
  "description": "MCP Server para dados da bolsa de valores em tempo real",
  "author": "Bruno Lucena",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brunovlucena/mcp-stock-server.git"
  },
  "homepage": "https://github.com/brunovlucena/mcp-stock-server",
  "bugs": {
    "url": "https://github.com/brunovlucena/mcp-stock-server/issues"
  },
  "keywords": [
    "mcp",
    "stocks",
    "finance",
    "bolsa",
    "valores",
    "stock-market",
    "financial-data",
    "real-time"
  ],
  "mcp": {
    "name": "stock-server",
    "version": "1.0.0",
    "description": "Servidor MCP para dados financeiros e da bolsa de valores",
    "capabilities": {
      "tools": true,
      "resources": false,
      "prompts": false,
      "logging": true
    }
  },
  "docker": {
    "image": "mcp-stock-server",
    "tag": "latest",
    "platform": "linux/amd64",
    "arch": ["amd64", "arm64"],
    "registry": "ghcr.io",
    "namespace": "brunovlucena",
    "repository": "ghcr.io/brunovlucena/mcp-stock-server"
  },
  "runtime": {
    "node": "18",
    "memory": "512Mi",
    "cpu": "500m",
    "ports": [3000],
    "environment": {
      "NODE_ENV": "production",
      "MCP_SERVER_NAME": "stock-server",
      "MCP_SERVER_VERSION": "1.0.0",
      "PORT": "3000",
      "LOG_LEVEL": "info"
    }
  },
  "health": {
    "enabled": true,
    "port": 3000,
    "path": "/health",
    "interval": "30s",
    "timeout": "10s",
    "retries": 3
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "port": 9090,
      "path": "/metrics"
    },
    "logging": {
      "level": "info",
      "format": "json",
      "output": "stdout"
    }
  },
  "security": {
    "user": "mcpuser",
    "uid": 1001,
    "gid": 1001,
    "capabilities": ["NET_BIND_SERVICE"],
    "seccomp": "default",
    "apparmor": "docker-default"
  },
  "labels": {
    "org.opencontainers.image.title": "MCP Stock Server",
    "org.opencontainers.image.description": "MCP Server para dados da bolsa de valores",
    "org.opencontainers.image.version": "1.0.0",
    "org.opencontainers.image.authors": "Bruno Lucena",
    "org.opencontainers.image.url": "https://github.com/brunovlucena/mcp-stock-server",
    "org.opencontainers.image.source": "https://github.com/brunovlucena/mcp-stock-server",
    "org.opencontainers.image.licenses": "MIT",
    "mcp.server.name": "stock-server",
    "mcp.server.version": "1.0.0",
    "mcp.server.capabilities": "tools,logging"
  },
  "tags": [
    "latest",
    "v1.0.0",
    "stable",
    "production"
  ],
  "categories": [
    "finance",
    "stocks",
    "market-data",
    "real-time",
    "mcp-server"
  ],
  "compatibility": {
    "mcp": ">=1.0.0",
    "node": ">=18.0.0",
    "docker": ">=20.0.0"
  },
  "maintainers": [
    {
      "name": "Bruno Lucena",
      "email": "bruno@example.com",
      "github": "brunovlucena"
    }
  ],
  "contributing": {
    "url": "https://github.com/brunovlucena/mcp-stock-server/blob/main/CONTRIBUTING.md",
    "guidelines": "https://github.com/brunovlucena/mcp-stock-server/blob/main/CONTRIBUTING.md"
  },
  "support": {
    "issues": "https://github.com/brunovlucena/mcp-stock-server/issues",
    "discussions": "https://github.com/brunovlucena/mcp-stock-server/discussions",
    "email": "support@example.com"
  }
}
